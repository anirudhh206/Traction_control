# ============================================================================
# RepEscrow - Environment Variables
# Copy this to .env and fill in your values
# ============================================================================

# ANTHROPIC (Claude AI)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# SUPABASE (Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# REDDIT (deprioritized - API approval takes weeks)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_USER_AGENT=RepEscrow:v1.0.0

# DISCORD
DISCORD_BOT_TOKEN=your_discord_bot_token

# TELEGRAM
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# SENDGRID (Email)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=hello@repescrow.xyz
FROM_NAME=RepEscrow Team

# TWITTER (skipped for now)
TWITTER_USERNAME=your_twitter_handle
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_twitter_email

# PRODUCT
PRODUCT_NAME=RepEscrow
PRODUCT_URL=https://repescrow.xyz
PRODUCT_TAGLINE=Reputation-weighted escrow for Web3 service providers

# MONITORING
LOG_LEVEL=INFO
ENVIRONMENT=development

# RATE LIMITS
MAX_REDDIT_POSTS_PER_DAY=10
MAX_REDDIT_COMMENTS_PER_DAY=20
MAX_DISCORD_MESSAGES_PER_DAY=30
MAX_TELEGRAM_MESSAGES_PER_DAY=25
MAX_EMAILS_PER_DAY=100
MAX_TWITTER_POSTS_PER_DAY=6
MAX_TWITTER_REPLIES_PER_DAY=100

# AGENT TOGGLE
ENABLE_REDDIT_AGENT=false
ENABLE_DISCORD_AGENT=true
ENABLE_TELEGRAM_AGENT=true
ENABLE_EMAIL_AGENT=true
ENABLE_TWITTER_AGENT=false
ENABLE_FORUM_AGENT=true
ENABLE_COMMUNITY_AGENT=true

# WEB APP (Next.js)
NEXT_PUBLIC_RPC_ENDPOINT=https://api.devnet.solana.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
